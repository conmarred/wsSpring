package controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import model.Pagina;
import service.BuscadorService;
import service.NuevaPaginaService;

@Controller
public class NuevaPaginaController {
	
	@Autowired
	NuevaPaginaService nuevaPaginaService;
	
	@Autowired
	BuscadorService buscadorService;
	
	@GetMapping(value="NuevaPagina")
	public String nuevaPagina(String direccion, String tematica, String descripcion) {
		Pagina p1 = new Pagina(direccion, tematica, descripcion);
		buscadorService.alta(p1);
		return "listado;
	}
	
	

}
